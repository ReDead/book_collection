<table summary="Task form fields">
  <tr>
    <th>Title</th>
    <td><%= f.text_field(:title) %></td>
  </tr>
  <tr>
    <th>Author</th>
    <td><%= f.text_field(:author) %></td>
  </tr>
  <tr>
    <th>Price</th>
    <td><%= f.number_field(:price, :step => 0.01) %></td>
  </tr>
  <tr>
    <th>Date Published</th>
    <td><%= f.date_field(:published) %></td>
  </tr>
</table>
